@model IEnumerable<Rumah_Idaman.Models.LokasiRumahModel>

@{
    Layout = null;
}

<style>
    #map {
        height: 350px;
        width: 500px;
    }
</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body>
    <div id="map-dialog">
        <div id="fordragging">
            <input id="pac-input" class="controls" type="text" placeholder="Search For Keywords" />
            <input type="button" class="btn btn-primary" id="searchid" value="Search" style="margin-top: 9px;" /> 
        </div>
        <div id="model-map2" style="height: 76%; width: 77%; position: absolute; overflow: hidden;"></div>
    </div>
    <div class="text-center">
        <div id="map"></div>
        <script>
      var map;
      function initMap() {
        map = new google.maps.Map(document.getElementById('map'), {
            center: { lat: -6.914744, lng: 107.609810},
          zoom: 15
          });

          var marker = new google.maps.Marker({
              position: { lat: -6.895364, lng: 107.604799 },
              map: map
          });

          var marker = new google.maps.Marker({
              position: { lat: -6.81167, lng: 107.6175 },
              map: map
          });
      }
        </script>
        <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBFrIm6PbfrCVAQX9IrSyJtiw6z1Yelo9k&callback=initMap"
                async defer></script>
    </div>
    <div>
        <h4>LokasiRumahModel</h4>
        <hr />
        <p>
            <a asp-action="Create">Add Location</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Longtitude)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Latitude)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var data in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => data.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => data.Type)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => data.Longtitude)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => data.Latitude)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
